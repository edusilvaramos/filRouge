{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h1 class="text-center text-primary mb-4">Edit Project</h1>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-8 col-sm-12">
            <div class="card shadow-sm p-4">
                <!-- Inclusão do Formulário -->
                {{ include('project/projectForm.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <!-- Botão para Voltar -->
        <a href="{{ path('app_project_index') }}" class="btn btn-outline-secondary btn-lg me-2 mb-3" aria-label="Back to Project List">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>

        <!-- Botão para Deletar -->
        {{ include('project/projectDelete.html.twig') }}
    </div>
</div>
{% endblock %}
