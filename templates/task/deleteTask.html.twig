<form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Task {{ task.title }}??');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
	<button class="btn btn-outline-danger btn-sm p-2" aria-label="Delete project {{ task.title }}">
		<i class="bi bi-trash"></i>
		Delete
	</button>
</form>
