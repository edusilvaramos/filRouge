{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <i class="bi bi-house-add-fill fs-1 text-primary"></i>
        <h1 class="text-success mt-3">Address Details</h1>
    </div>

    <div class="card shadow-sm p-4">
        <table class="table table-striped table-hover table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ address.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ address.title }}</td>
                </tr>
                <tr>
                    <th scope="row">First Name</th>
                    <td>{{ address.fName }}</td>
                </tr>
                <tr>
                    <th scope="row">Last Name</th>
                    <td>{{ address.lName }}</td>
                </tr>
                <tr>
                    <th scope="row">Street Name</th>
                    <td>{{ address.streetName }}</td>
                </tr>
                <tr>
                    <th scope="row">Door Number</th>
                    <td>{{ address.numberDoor }}</td>
                </tr>
                <tr>
                    <th scope="row">Postal Code</th>
                    <td>{{ address.postalCode }}</td>
                </tr>
                <tr>
                    <th scope="row">City</th>
                    <td>{{ address.city }}</td>
                </tr>
                <tr>
                    <th scope="row">Country</th>
                    <td>{{ address.country }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <!-- Botão de voltar -->
        <a href="{{ path('app_address_index') }}" class="btn btn-outline-primary btn-lg" aria-label="Retourner à la liste">
            <i class="bi bi-arrow-left-circle-fill"></i> Aller à la liste
        </a>

        <!-- Botão de edição -->
        <a href="{{ path('app_address_edit', {'id': address.id}) }}" class="btn btn-outline-success btn-lg" aria-label="Éditer l'adresse">
            <i class="bi bi-house-gear"></i> Edit
        </a>

        <!-- Botão de exclusão -->
        {{ include('address/deleteAddress.html.twig') }}
    </div>
</div>
{% endblock %}
