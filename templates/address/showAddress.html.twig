{% extends 'base.html.twig' %}

{% block title %}Address
{% endblock %}

{% block body %}
	<div class="container">
		<div class=" mt-5 mb-5 fs-3">
			<h1>Address</h1>
			<div class="mt-5 ms-5">
				<i class="bi bi-house-add-fill fs-1"></i>
				<h1 class="text-success mx-auto ms-5"></h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ address.id }}</td>
						</tr>
						<tr>
							<th>Title</th>
							<td>{{ address.title }}</td>
						</tr>
						<tr>
							<th>FName</th>
							<td>{{ address.fName }}</td>
						</tr>
						<tr>
							<th>LName</th>
							<td>{{ address.lName }}</td>
						</tr>
						<tr>
							<th>StreetName</th>
							<td>{{ address.streetName }}</td>
						</tr>
						<tr>
							<th>NumberDoor</th>
							<td>{{ address.numberDoor }}</td>
						</tr>
						<tr>
							<th>PostalCode</th>
							<td>{{ address.postalCode }}</td>
						</tr>
						<tr>
							<th>City</th>
							<td>{{ address.city }}</td>
						</tr>
						<tr>
							<th>Country</th>
							<td>{{ address.country }}</td>
						</tr>
					</tbody>
				</table>
				<hr class="border border-danger rounded-1 border-2 opacity-100 mt-1 mb-2"/>
				<div class="d-flex justify-content-between">
					<button class="btn btn-primary m-3 text-white ">
						<a class="text-white" href="{{ path('app_address_index') }}">
							<i class="bi bi-arrow-left-circle-fill"></i>
							Aller a la liste</a>
					</button>

					<button class="btn btn-primary m-3 text-white">
						<a class="text-white" href="{{ path('app_address_edit', {'id': address.id}) }}">
							<i class="bi bi-house-gear"></i>
							Edit</a>
					</button>
					{{ include('address/deleteAddress.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
