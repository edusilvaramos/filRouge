{% extends 'base.html.twig' %}

{% block title %}Address index
{% endblock %}

{% block body %}
	<div class="container  mt-5 mb-5 w-100">
		<h1>Address index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>FName</th>
					<th>LName</th>
					<th>StreetName</th>
					<th>NumberDoor</th>
					<th>PostalCode</th>
					<th>City</th>
					<th>Country</th>

				</tr>
			</thead>
			<tbody>
				{% for address in addresses %}
					<tr>
						<td>{{ address.id }}</td>
						<td>{{ address.title }}</td>
						<td>{{ address.fName }}</td>
						<td>{{ address.lName }}</td>
						<td>{{ address.streetName }}</td>
						<td>{{ address.numberDoor }}</td>
						<td>{{ address.postalCode }}</td>
						<td>{{ address.city }}</td>
						<td>{{ address.country }}</td>
						<td>

							<a href="{{ path('app_address_show', {'id': address.id}) }}" class="btn btn-info btn-sm m-2">
								<i class="bi bi-eye"></i>
							</a>
							<a href="{{ path('app_address_edit', {'id': address.id}) }}" class="btn btn-warning btn-sm m-2">
								<i class="bi bi-pencil-fill"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<hr class="border border-danger rounded-1 border-2 opacity-100 mt-1 mb-2"/>


		<button class="btn btn-primary m-3 text-white ">
			<a class="text-white" href="{{ path('app_address_new') }}">
				<i class="bi bi-plus-circle-fill"></i>
				Create new</a>
		</button>
	</div>
{% endblock %}
