{% extends 'base.html.twig' %}

{% block title %}User Address{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h1 class="mb-4 text-center text-success">User Address</h1>

    <div class="row g-4">
        {% for address in app.user.addresses %}
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-geo-alt-fill"></i> {{ address.title }}
                        </h5>
                        <p class="mb-2">
                            <strong><i class="bi bi-person-fill"></i> Name:</strong> {{ address.fName }} {{ address.lName }}
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-signpost-2-fill"></i> Address:</strong> {{ address.streetName }}, {{ address.numberDoor }}
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-envelope-fill"></i> Postal Code:</strong> {{ address.postalCode }}
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-building"></i> City:</strong> {{ address.city }}
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-flag-fill"></i> Country:</strong> {{ address.country }}
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_address_show', {'id': address.id}) }}" 
                           class="btn btn-info btn-sm" 
                           aria-label="View address">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a href="{{ path('app_address_edit', {'id': address.id}) }}" 
                           class="btn btn-warning btn-sm" 
                           aria-label="Edit address">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-danger fs-5">No addresses found</p>
            </div>
        {% endfor %}
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_address_new') }}" class="btn btn-success btn-lg" aria-label="Create new address">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>
</div>
{% endblock %}
