{% extends 'base.html.twig' %}

{# para redefinir a nar e mostrar as infos para un usr nao logado #}
{% block nav %}{% endblock %}
{% block body %}
	<div class="container mt-5 w-75">
		<form method="post" action="{{ path('app_remember') }}">
			{# {% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %} #}

			<h1 class="h3 mt-3 font-weight-normal">Entrez votre adresse email pour recuperer votre mot de passe</h1>

			<label for="username">Email</label>
			<input type="email" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="Email">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary mt-2" type="submit">
				Recuperer
			</button>
			<div class="mt-3">

				<a class=" btn-sm me-2 fs-" href="{{ path('app_login') }}">
					<i class="bi bi-arrow-left-circle-fill"></i>
					Login
				</a>

			</div>
		</form>
	</div>
{% endblock %}
