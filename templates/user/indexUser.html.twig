{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h1 class="mb-4 text-center text-success">Coordonnées</h1>

    <div class="row">
        {% if app.user %}
            <div class="col-12">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="card-title mb-0">User Matricule: {{ app.user.matricule }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <!-- Foto grande do usuário -->
                            <div class="col-md-4 text-center">
                                <img src="{{ asset(app.user.photoUser) }}" alt="User Photo" class="img-fluid rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
                            </div>
                            <!-- Dados do usuário -->
                            <div class="col-md-8">
                                <p class="card-text"><strong>Email:</strong> {{ app.user.email }}</p>
                                <p class="card-text"><strong>Roles:</strong> {{ app.user.roles ? app.user.roles|join(', ') : 'N/A' }}</p>
                                <p class="card-text"><strong>First Name:</strong> {{ app.user.firstName }}</p>
                                <p class="card-text"><strong>Last Name:</strong> {{ app.user.lastName }}</p>
                                <p class="card-text"><strong>Birthday:</strong> {{ app.user.birthday ? app.user.birthday|date('Y-m-d') : 'N/A' }}</p>
                                <p class="card-text"><strong>Telephone:</strong> {{ app.user.telephone }}</p>
                                <p class="card-text"><strong>Team:</strong> {{ app.user.team }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="btn btn-outline-primary btn-sm" aria-label="View">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-outline-warning btn-sm" aria-label="Edit">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                <p>No records found</p>
            </div>
        {% endif %}
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_user_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New User
        </a>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 10px;
    }

    .img-fluid {
        transition: transform 0.3s ease;
    }

    .img-fluid:hover {
        transform: scale(1.1);
    }

    @media (max-width: 768px) {
        .card-title {
            font-size: 1.2rem;
        }

        .card-text {
            font-size: 0.9rem;
        }
    }
</style>
{% endblock %}
